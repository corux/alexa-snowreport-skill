{
  "name": "alexa-snowreport-skill",
  "version": "1.0.0",
  "description": "Alexa Snow Report Skill",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "pretest": "npm run build:prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "parcel $PARCEL_CMD src/index.ts --target node --bundle-node-modules",
    "build:dev": "PARCEL_CMD=watch npm run build",
    "build:prod": "npm run lint && PARCEL_CMD=build npm run build",
    "deploy:prod": "ask deploy --force --profile default --target lambda",
    "update-schema": "ts-node ./bin/update-schema.ts --file ./models/de-DE.json",
    "convert-assets": "rsvg-convert -w 108 -o assets/icon108.png assets/icon.svg && rsvg-convert -w 512 -o assets/icon512.png assets/icon.svg",
    "create-s3-bucket": "aws s3 ls s3://alexa-snowreport-skill > /dev/null 2>&1 || aws s3 mb s3://alexa-snowreport-skill --region eu-west-1",
    "deploy:assets": "aws s3 sync ./assets s3://alexa-snowreport-skill/ --acl public-read"
  },
  "devDependencies": {
    "@corux/ask-extensions": "2.0.0",
    "@types/cheerio": "0.22.23",
    "@types/jest": "26.0.19",
    "@types/node": "10.14.1",
    "ask-cli": "2.22.2",
    "ask-sdk-core": "2.10.1",
    "ask-sdk-model": "1.34.1",
    "axios": "0.21.1",
    "cheerio": "1.0.0-rc.5",
    "commander": "6.2.1",
    "jest": "26.6.3",
    "parcel-bundler": "1.12.4",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.13",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "4.1.3",
    "virtual-alexa": "0.7.5"
  }
}
