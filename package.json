{
  "name": "alexa-snowreport-skill",
  "version": "1.0.0",
  "description": "Alexa Snow Report Skill",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "webpack --config webpack.config.ts --require ts-node/register",
    "build:dev": "npm run build -- --mode development --watch",
    "build:prod": "npm run lint && npm run build -- --mode production",
    "deploy:prod": "ask deploy --force --profile default --target lambda",
    "update-schema": "ts-node ./bin/update-schema.ts --file ./models/de-DE.json",
    "convert-assets": "rsvg-convert -w 108 -o assets/icon108.png assets/icon.svg && rsvg-convert -w 512 -o assets/icon512.png assets/icon.svg",
    "create-s3-bucket": "aws s3 ls s3://alexa-snowreport-skill > /dev/null 2>&1 || aws s3 mb s3://alexa-snowreport-skill --region eu-west-1",
    "deploy:assets": "aws s3 sync ./assets s3://alexa-snowreport-skill/ --acl public-read"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.10",
    "@types/jest": "24.0.2",
    "@types/node": "10.12.25",
    "@types/request-promise-native": "1.0.15",
    "ask-cli": "1.6.2",
    "ask-sdk-core": "2.3.0",
    "ask-sdk-model": "1.11.2",
    "cheerio": "1.0.0-rc.2",
    "class.extend": "0.9.2",
    "commander": "2.19.0",
    "jest": "24.1.0",
    "raw-loader": "1.0.0",
    "request-promise-native": "1.0.5",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "typescript": "3.3.3",
    "underscore": "1.9.1",
    "virtual-alexa": "0.6.14",
    "webpack": "4.29.3",
    "webpack-command": "0.4.2"
  }
}
